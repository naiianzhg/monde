<!--pages/company/company.wxml-->
<view class="content">
  <view class="pageTitle">验证企业邮箱</view>

  <view class="account">
    <view class="title">+86</view>
    <view class="input">
      <input bindinput="numInput" placeholder="请输入手机号" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
    <button class="get" style="height:50rpx;">获取验证码</button>
  </view>

  <view class="account">
    <view class="title">手机验证码</view>
    <view class="input">
      <input bindinput="codeInput" placeholder="请输入手机验证码" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
  </view>

  <view class="account">
    <view class="title">企业邮箱</view>
    <view class="input">
      <input bindinput="emailInput" placeholder="请输入企业邮箱" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
    <button class="get" style="height:50rpx;">获取验证码</button>
  </view>
  <view class="account">
    <view class="title">邮箱验证码</view>
    <view class="input">
      <input bindinput="codeInput" placeholder="请输入邮箱验证码" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
  </view>
  <view class="blank"></view>

  <view class="account">
    <view class="title">用户名</view>
    <view class="input">
      <input bindinput="pwdInput" placeholder="请设置用户名" password="true" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
  </view>
  <view class="account">
    <view class="title">密码</view>
    <view class="input">
      <input bindinput="pwdInput" placeholder="请设置密码" password="true" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
  </view>
  <view class="account">
    <view class="title">密码确认</view>
    <view class="input">
      <input bindinput="pwdInput" placeholder="请再次输入密码" password="true" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
  </view>
  <view class="account">
    <view class="title">登录密码</view>
    <view class="input">
      <input bindinput="pwdInput" placeholder="请设置6位登录密码" password="true" placeholder-style="color:#cccccc;" style="width:120%" />
    </view>
    <view class="body-view">
      <switch checked bindchange="switch1Change" />
    </view>
  </view>

  <view class="blank"></view>

  <button class="btn" disabled="{{disable}}" type="{{btnState}}" bindtap="login">注册</button>

</view>